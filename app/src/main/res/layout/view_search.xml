<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="keyword"
            type="String" />
        <variable
            name="view"
            type="com.lutawav.architecturestudy.widget.NaverSearchBarView" />
        <variable
            name="clickEvent"
            type="com.lutawav.architecturestudy.widget.SearchButtonClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/search_editor"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="10dp"
            android:gravity="center|left"
            android:lines="1"
            android:text="@{keyword}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/search_btn"
            app:layout_constraintBottom_toBottomOf="@+id/search_btn"
            tools:text="검색 검색 검색 검색 검색 검색 검색 검색 검색 검색 검색 검색" />

        <Button
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:onClick="@{(v) -> clickEvent.onClick(v, searchEditor.getText().toString())}"
            app:layout_constraintStart_toEndOf="@+id/search_editor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>